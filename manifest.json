{
    "name": "Random Bookmark",
    "version": "1.0",
    "description": "Open a random bookmark in a new tab",
    "manifest_version": 2,
    "permissions": ["storage", "bookmarks"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "18": "images/baseline_shuffle_white_18dp.png"
        }
    },
    "icons": {
        "18": "images/baseline_shuffle_white_18dp.png"
    }
}
