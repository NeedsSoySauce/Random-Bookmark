{
    "name": "Random Bookmark",
    "version": "1.2.1",
    "description": "Open a random bookmark",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "bookmarks",
        "alarms"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_icon": {
            "16": "images/shuffle-gray/16.png",
            "32": "images/shuffle-gray/32.png",
            "48": "images/shuffle-gray/48.png",
            "128": "images/shuffle-gray/128.png"
        }
    },
    "icons": {
        "16": "images/shuffle-gray/16.png",
        "32": "images/shuffle-gray/32.png",
        "48": "images/shuffle-gray/48.png",
        "128": "images/shuffle-gray/128.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+7",
                "mac": "Command+Shift+7"
            },
            "global": true
        },
        "shuffle": {
            "description": "Shuffle"
        },
        "open-options": {
            "description": "Open options"
        }
    }
}