{
    "name": "Random Bookmark",
    "version": "1.2.0",
    "description": "Open a random bookmark",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "bookmarks"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_icon": {
            "16": "images/shuffle-white/16.png",
            "32": "images/shuffle-white/32.png",
            "48": "images/shuffle-white/48.png",
            "128": "images/shuffle-white/128.png"
        }
    },
    "icons": {
        "16": "images/shuffle-white/16.png",
        "32": "images/shuffle-white/32.png",
        "48": "images/shuffle-white/48.png",
        "128": "images/shuffle-white/128.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}