{
    "name": "Random Bookmark",
    "version": "1.1.0",
    "description": "Open a random bookmark",
    "manifest_version": 2,
    "permissions": ["storage", "bookmarks"],
    "background": {
        "scripts": ["config.js", "background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "images/16.png",
            "48": "images/48.png",
            "128": "images/128.png"
        }
    },
    "icons": {
        "16": "images/16.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}
